<?php if (isset($categories) && !empty($categories)) { ?>
<div class="clearfix categoryList">
	<?php if($config['view_title']) { ?>
	<div class="page-header">
		<h4><?php _e('Category list'); ?></h4>
	</div>
    <?php } ?>
	<?php foreach($categories as $category) { ?>
	<div class="col-sm-3 col-md-2">
		<?php if($category['image']) { ?>
        <div class="categoryImage text-center"><a title="<?php echo $this->escape($category['title']); ?>" href="<?php echo $this->escape($category['url']); ?>"><img class="img-thumbnail" src="<?php echo $category['thumbUrl']; ?>" alt="<?php echo $this->escape($category['title']); ?>" /></a></div>
        <div class="categoryTitle text-center"><a title="<?php echo $this->escape($category['title']); ?>" href="<?php echo $this->escape($category['url']); ?>"><?php echo $this->escape($category['title']); ?></a></div>
		<?php } else { ?>
		<div class="categoryTitle"><a title="<?php echo $this->escape($category['title']); ?>" href="<?php echo $this->escape($category['url']); ?>"><i class="fa fa-folder-open"></i> <?php echo $this->escape($category['title']); ?></a></div>
		<?php } ?>
	</div>
	<?php } ?>
</div>
<?php } elseif (isset($categoryItem) && !empty($categoryItem)) { ?>
<div class="clearfix categoryItemList">
	<?php foreach($categoryItem as $category) { ?>
	<span class="categoryTitle">
		<a title="<?php echo $this->escape($category['title']); ?>" href="<?php echo $this->escape($category['url']); ?>"><i class="fa fa-folder-open"></i> <?php echo $this->escape($category['title']); ?></a>
	</span>
	<?php } ?>
</div>
<?php } ?>